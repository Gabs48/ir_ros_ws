import rospy
from std_srvs.srv import *
from std_msgs.msg import ByteMultiArray
from std_msgs.msg import Int32MultiArray
from std_msgs.msg import MultiArrayLayout
import time


# Create node
rospy.init_node('ir_fsm_test', anonymous=True)
pub = rospy.Publisher('bluetooth', Int32MultiArray, queue_size=2)
rate = rospy.Rate(10) # 10hz

# Start process
time.sleep(2)
to_pub = Int32MultiArray(layout=MultiArrayLayout([], 1), data=[1, 0, 0, 0, 0, 0, 0, 0])
pub.publish(to_pub)

# # Wait for fsm to be on
# rospy.wait_for_service('fsm_run')
# rospy.loginfo("FSM node is ON")
	
# try:
# 	# Start
# 	start_fsm = rospy.ServiceProxy('fsm_run', Empty)
# 	start_fsm()

#  	# We have called fsm start
#  	rospy.loginfo("FSM start service called")

# # Handle error
# except rospy.ServiceException as e:
# 	rospy.logerr("Service call failed: " + str(e))

# Wait a bit
time.sleep(10)
to_pub = Int32MultiArray(layout=MultiArrayLayout([], 1), data=[0, 1, 0, 0, 0, 0, 0, 0])
pub.publish(to_pub)
time.sleep(1)
to_pub = Int32MultiArray(layout=MultiArrayLayout([], 1), data=[0, 0, 0, 0, 0, 0, 0, 0])
pub.publish(to_pub)
time.sleep(25)
to_pub = Int32MultiArray(layout=MultiArrayLayout([], 1), data=[0, 0, 0, 1, 0, 0, 0, 0])
pub.publish(to_pub)
